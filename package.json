{
    "name": "jwt-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^16.11.4",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.4.1",
        "typescript": "^4.4.4"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": [
                "./tsconfig.json"
            ]
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/strict-boolean-expressions": [
                2,
                {
                    "allowString": false,
                    "allowNumber": false
                }
            ]
        },
        "ignorePatterns": [
            "src/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "build": "npx tsc",
        "start": "npx tsc && node ./build/app.js"
    },
    "dependencies": {
        "@types/body-parser": "^1.19.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.5",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^4.1.3"
    }
}
