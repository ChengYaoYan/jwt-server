{
    "name": "jwt-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.4.1",
        "typescript": "^4.4.4"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": [
                "./tsconfig.json"
            ]
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/strict-boolean-expressions": [
                2,
                {
                    "allowString": false,
                    "allowNumber": false
                }
            ]
        },
        "ignorePatterns": [
            "src/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install"
    }
}
